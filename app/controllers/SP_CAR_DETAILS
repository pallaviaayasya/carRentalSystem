CREATE PROCEDURE CAR_DETAILS
(
@car_no VARCHAR(10),
@car_name VARCHAR(50),
@car_type VARCHAR(10),
@car_city VARCHAR(10),
@area VARCHAR(10),
@rate DOUBLE,
@StatementType nvarchar(20) = ' '
)
AS
BEGIN
IF @StatementType = 'Insert'
BEGIN
INSERT INTO CARS(car_no,car_name,car_type,car_city,area,rate) VALUES (@car_no,@car_name,@car_type,@area,@rate,@type)
END
IF @StatementType = 'Delete'
BEGIN 
DELETE FROM CARS WHERE car_no=@car_no
END
ELSE IF @StatementType = 'Select'
BEGIN
SELECT * FROM CARS
END
END
EXEC CAR_DETAILS; 
